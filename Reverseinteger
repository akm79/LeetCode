class Solution:
    def reverse(self, x: int) -> int:
        rev=0
        y=x
        if x<0:
            x=-1*x
        while(x>0):
            rem=x%10
            rev=(rev*10)+rem
            x//=10
        if y<0:
            rev=-1*rev
        if rev>(2**31)-1 or rev<-((2**31)-1):
            return 0
        return rev
            
